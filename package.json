{
  "name": "asembleo",
  "private": true,
  "dependencies": {
    "@popperjs/core": "^2.11.2",
    "@rails/actioncable": "^7.0.0",
    "@rails/activestorage": "^7.0.0",
    "@rails/ujs": "^7.0.0",
    "bootstrap": "^5.0.0",
    "esbuild": "^0.15.0",
    "sass": "^1.55.0"
  },
  "version": "0.1.1",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "yarn run build:css:application && yarn run build:css:theme",
    "build:css:application": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:theme": "rake asembleo:compile_theme && sass ./app/assets/stylesheets/theme.sass.scss ./app/assets/builds/theme.css --no-source-map --load-path=node_modules"
  }
}
