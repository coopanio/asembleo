@import "bootstrap/scss/functions";
@import "bootstrap/scss/variables";

:root {
  $primary: <%= Rails.configuration.x.asembleo.primary_color %>;
  $secondary: <%= Rails.configuration.x.asembleo.secondary_color %>;
  $header-background: <%= Rails.configuration.x.asembleo.header_background_color %>;
  $header-color: <%= Rails.configuration.x.asembleo.header_color %>;
  $footer-background: <%= Rails.configuration.x.asembleo.footer_background_color %>;
  $footer-color: <%= Rails.configuration.x.asembleo.footer_color %>;

  --asembleo-primary: #{$primary};
  --asembleo-primary-focus-shadow-rgb: #{to-rgb(mix(color-contrast($primary), $primary, 15%))};
  --asembleo-primary-rgb: #{to-rgb($primary)};
  --asembleo-primary-shade-15: #{shade-color($primary, 15%)};
  --asembleo-primary-shade-20: #{shade-color($primary, 20%)};
  --asembleo-primary-shade-25: #{shade-color($primary, 25%)};
  --asembleo-primary-shifted-20: #{shift-color($primary, 20%)};
  --asembleo-primary-shifted-40: #{shift-color($primary, 40%)};
  --asembleo-primary-shifted-down-70: #{shift-color($primary, 70%)};
  --asembleo-primary-shifted-down-80: #{shift-color($primary, 80%)};

  --asembleo-secondary: #{$secondary};
  --asembleo-secondary-rgb: #{to-rgb($secondary)};
  --asembleo-secondary-shade-15: #{shade-color($secondary, 15%)};
  --asembleo-secondary-shade-20: #{shade-color($secondary, 20%)};
  --asembleo-secondary-shade-25: #{shade-color($secondary, 25%)};
  --asembleo-secondary-shifted-20: #{shift-color($secondary, 20%)};
  --asembleo-secondary-shifted-40: #{shift-color($secondary, 40%)};
  --asembleo-secondary-shifted-down-70: #{shift-color($secondary, 70%)};
  --asembleo-secondary-shifted-down-80: #{shift-color($secondary, 80%)};

  --asembleo-header-background-rgb: #{to-rgb($header-background)};
  --asembleo-header-color: #{$header-color};

  --asembleo-footer-background-rgb: #{to-rgb($footer-background)};
  --asembleo-footer-color: #{$footer-color};
}

<% if Rails.configuration.x.asembleo.background_css %>
  body {
    background: <%= Rails.configuration.x.asembleo.background_css %>;
    background-size: cover;
  }
<% end %>
