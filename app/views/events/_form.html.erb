<%= form_with scope: :event, model: @event do |f| %>
  <div class="row mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', disabled: @current_user.manager? %>
  </div>
  <div class="row mb-3">
    <%= f.label :status, class: 'form-label' %>
    <%= f.select :status, Event.statuses.keys.to_a, class: 'form-control' %>
  </div>
  <div class="row mb-3">
    <div class="col d-flex justify-content-end">
      <%= link_to 'CancelÂ·lar', :back, class: 'btn btn-link text-danger' %>
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>