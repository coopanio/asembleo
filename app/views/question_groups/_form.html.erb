<%= form_for [@consultation, @question_group], scope: :question_group, model: @question_group, class: 'container', local: true do |f| %>
  <div class="row mb-3">
    <%= f.label :description, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <%= f.fields_for :config, @question_group.config do |f| %>
  <div class="row mb-3">
    <div class="form-group">
      <div class="form-check">
        <%= f.check_box :random_order, class: 'form-check-input' %>
        <%= f.label :random_order, class: 'form-check-label' %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row mb-3">
    <div class="col d-flex justify-content-end">
      <%= f.submit t('application.save'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>