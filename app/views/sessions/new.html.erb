<div class="m-auto col-md-6">
  <% if Rails.configuration.x.asembleo.logo_url %>
    <div class="col-12 text-center mb-3">
      <img src="<%= Rails.configuration.x.asembleo.logo_url %>" alt="Logo" width="256">
    </div>
  <% end %>
  <%= form_with scope: :session, url: sessions_path, class: 'row g-2', local: true do |f| %>
    <div class="col-12">
      <%= f.text_field :identifier, class: 'form-control form-control-lg', autofocus: '', autocomplete: 'off', placeholder: '' %>
    </div>
    <div class="col-12">
      <%= f.password_field :password, class: 'form-control form-control-lg', autocomplete: 'off', placeholder: '' %>
    </div>
    <div class="col-12">
      <%= f.submit 'Log in', class: 'btn btn-primary btn-lg w-100' %>
    </div>
  <% end %>
</div>