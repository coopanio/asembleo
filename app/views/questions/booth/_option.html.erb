<% if question.max_options > 1 %>
  <%= form.check_box "vote[#{question.id}][value]", { class: 'form-check-input', disabled: question.draft?, include_hidden: false, multiple: true }, option.value %>
<% else %>
  <%= form.radio_button "vote[#{question.id}][value]", option.value, class: 'form-check-input', disabled: question.draft?, multiple: true %>
<% end %>
<%= form.label option.description, for: "vote[#{question.id}][value]_#{option.value}", class: 'form-check-label' %>