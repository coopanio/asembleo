<%= form_for [@consultation, @question], scope: :question, model: @question, class: 'container', local: true do |f| %>
  <div class="row mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="row mb-3">
    <%= f.label :max_options, class: 'form-label' %>
    <%= f.number_field :max_options, class: 'form-control' %>
  </div>
  <div class="row mb-3">
    <div class="col d-flex justify-content-end">
      <%= link_to t('application.cancel'), { controller: 'consultations', action: 'edit', id: @consultation.id }, class: 'btn btn-link link-danger' %>
      <%= f.submit t('application.save'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>