<div class="m-auto col-md-6">
  <%= form_with url: sessions_path, class: 'row g-2', local: true do |f| %>
    <div class="col-12">
      <%= f.text_field :token, class: 'form-control form-control-lg', autofocus: '', autocomplete: 'off', placeholder: Rails.configuration.x.assemblea.token_alias.present? ? Rails.configuration.x.assemblea.token_alias : 'Identificador' %>
    </div>
    <div class="col-12">
      <%= f.submit 'Accedir', class: 'btn btn-primary btn-lg w-100' %>
    </div>
  <% end %>
  <% if Rails.configuration.x.assemblea.public_instance %>
    <div class="row justify-content-end">
      <div class="col-auto">
        <%= link_to 'Crear consulta', new_consultation_path, class: 'btn btn-link link-info btn-sm p-0 m-1' %>
      </div>
    </div>
  <% end %>
</div>