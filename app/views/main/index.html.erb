<div class="m-auto col-3">
  <%= form_with url: sessions_path, class: 'row g-2', local: true do |f| %>
    <div class="col-12">
      <%= f.text_field :token, class: 'form-control form-control-lg', autofocus: '', autocomplete: 'off', placeholder: 'Identificador' %>
    </div>
    <div class="col-12">
      <%= f.submit 'Accedir', class: 'btn btn-primary btn-lg w-100' %>
    </div>
  <% end %>
  <div class="row justify-content-end">
    <div class="col-auto">
      <%= link_to 'Crear consulta', new_consultation_path, class: 'btn btn-link link-info btn-sm p-0 m-1' %>
    </div>
  </div>
</div>