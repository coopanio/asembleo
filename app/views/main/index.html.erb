<div class="m-auto col-md-6">
  <% if Rails.configuration.x.asembleo.logo_url %>
    <div class="col-12 text-center mb-3">
      <img src="<%= Rails.configuration.x.asembleo.logo_url %>" alt="Logo" width="256">
    </div>
  <% end %>
  <%= form_with scope: :session, url: sessions_path, class: 'row g-2', local: true do |f| %>
    <div class="col-12">
      <%= f.password_field :identifier, class: 'form-control form-control-lg', autofocus: '', autocomplete: 'off', placeholder: Rails.configuration.x.asembleo.token_alias.present? ? Rails.configuration.x.asembleo.token_alias : 'Token' %>
    </div>
    <div class="col-12">
      <%= f.submit 'Log in', class: 'btn btn-primary btn-lg w-100' %>
    </div>
  <% end %>
  <div class="row justify-content-end">
    <div class="col-auto">
      <% if Rails.configuration.x.asembleo.private_instance %>
        <%= link_to 'Log in', new_session_path, class: 'btn btn-link link-secondary btn-sm p-0 m-1' %>
      <% else %>
        <%= link_to 'Create consultation', new_consultation_path, class: 'btn btn-link link-secondary btn-sm p-0 m-1' %>
      <% end %>
    </div>
  </div>
</div>