<%= form_with scope: :user, url: users_path, class: 'container', local: true do |f| %>
  <div class="row mb-3">
    <%= f.label :email, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>
    <div class="row mb-3">
    <%= f.label :nid, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.text_field :nid, class: 'form-control' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col d-flex justify-content-end">
      <%= f.submit t('application.sign_up'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>