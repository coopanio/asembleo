<%= form_with scope: :consultation, model: @consultation, class: 'card mt-3', local: true do |f| %>
  <div class="card-header d-flex justify-content-between align-items-center">
    <div class="col">
      <strong id="notification">Notification</strong>
    </div>
  </div>
  <div class="card-body d-flex flex-column gap-2">
  <%= f.fields_for :notification, @consultation.notification do |f| %>
    <div class="form-group">
      <%= f.label :subject, class: 'form-label fw-bold' %>
      <%= f.text_field :subject, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body, class: 'form-label fw-bold' %>
      <%= f.text_area :body, class: 'form-control', rows: 5 %>
    </div>
    <div class="col d-flex justify-content-end">
      <%= f.submit t('application.save'), class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
<% end %>