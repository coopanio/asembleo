<div class="card mt-3">
  <div class="card-header d-flex justify-content-between">
    <strong><%= t('activerecord.models.event', count: 2) %></strong>
    <ul class="nav">
      <li class="nav-item">
        <%= link_to t('application.create'), new_event_path, class: 'nav-link p-0 text-decoration-underline' %>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"><%= t('activerecord.attributes.event.id') %></th>
          <th scope="col"><%= t('activerecord.attributes.event.title') %></th>
          <th colspan="2">
        </tr>
      </thead>
      <% @consultation.events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.title %></td>
        <td><%= link_to t('application.edit'), edit_event_path(event), class: 'btn btn-link py-0' %></td>
        <td><%= link_to t('application.delete'),
                event_path(event),
                class: 'btn btn-link py-0',
                method: :delete,
                data: { confirm: t('application.confirm') } %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>